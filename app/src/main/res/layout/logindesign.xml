<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/toplayout1"
        android:background="@drawable/side_nav_bar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_below="@+id/logo"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Smart Mobile Laundry" />


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dlogo4"
                    android:tint="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"/>

            </RelativeLayout>




        </RelativeLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplayout1"
        android:layout_marginTop="-200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@color/colorWhite">


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/colorWhite">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="12dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:layout_below="@+id/logo"
                        android:layout_marginBottom="14dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Sign In" />
                    <!-- Email Label -->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/email_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="12dp"
                        android:textColorHint="@color/colorGrey"
                        android:theme="@style/MyEditTextTheme"
                        app:boxBackgroundColor="@color/colorPrimary">

                        <EditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:fontFamily="@font/montserrat"
                            android:drawableEnd="@drawable/ic_account_circle_black_24dp"
                            android:inputType="textEmailAddress"
                            android:shadowColor="@color/colorBlack"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorGrey"
                            android:theme="@style/MyEditTextTheme" />
                    </android.support.design.widget.TextInputLayout>

                    <!-- Password Label -->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/password_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:textColorHint="@color/colorGrey"
                        android:theme="@style/MyEditTextTheme"
                        app:boxBackgroundColor="@color/colorPrimary">

                        <EditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:drawableEnd="@drawable/ic_vpn_key_black_24dp"
                            android:inputType="textPassword"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/montserrat"
                            android:textColorHint="@color/colorGrey" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_login"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/side_nav_bar"
                        android:fontFamily="@font/montserrat"
                        android:letterSpacing="0.5"
                        android:padding="12dp"
                        android:text="Login"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/link_signup"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:text="No account yet? Create one"
                            android:textColor="@color/colorBlue"
                            android:textSize="16dip" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:indeterminate="true"
                            android:theme="@style/LoginProgress"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>



            </ScrollView>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>


















