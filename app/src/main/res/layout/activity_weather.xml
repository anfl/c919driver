<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/templayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/colorWhite"
            android:textSize="64sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/temp"
            android:text="Â°C"
            android:textColor="@color/colorWhite"
            android:textSize="64sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/templayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/weatherimg"
        android:src="@drawable/weather" />


    <TextView
        android:id="@+id/temp_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:text="TexperatureDesc"
        android:fontFamily="@font/montserrat"
        android:layout_below="@+id/weatherimg"
        android:textSize="32sp" />

    <ImageView
        android:layout_width="200dp"
        android:tint="@color/colorWhite"
        android:layout_height="150dp"
        android:id="@+id/tempimg"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/temp_desc"
        android:layout_centerHorizontal="true"
        android:src="@drawable/temp" />


    <TextView
        android:id="@+id/sky_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:text="Sky Desc"
        android:fontFamily="@font/montserrat"
        android:layout_below="@+id/tempimg"
        android:textSize="32sp" />


</RelativeLayout>